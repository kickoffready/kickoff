    "eslint:base": "yarn eslint -c ./eslint/base.js ./__tests__/lint.js",
    "eslint:airbnb-base": "yarn eslint -c ./eslint/airbnb-base.js ./__tests__/lint.js",
    "eslint:ts": "yarn eslint -c ./eslint/ts.js ./__tests__/ts.ts"
